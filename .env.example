# ============================================
# TELEGRAM BOT CONFIGURATION
# ============================================

# Telegram Bot Token (отримати від @BotFather)
BOT_TOKEN=123456:ABC-DEF1234ghIkl-zyx57W2v1u123ew11

# Webhook URL (ваш публічний домен)
WEBHOOK_URL=https://yourdomain.com/webhook

# Webhook Secret (мінімум 32 символи, випадкова строка)
# Генерувати: python -c "import secrets; print(secrets.token_urlsafe(32))"
WEBHOOK_SECRET=your_random_secret_min_32_characters_here_change_this

# ============================================
# GOOGLE SHEETS CONFIGURATION
# ============================================

# Google Sheet ID (з URL таблиці)
GOOGLE_SHEET_ID=1a2b3c4d5e6f7g8h9i0j

# Google Service Account Credentials (JSON)
# Варіант 1: Повний JSON (одним рядком)
GOOGLE_CREDENTIALS_JSON={"type":"service_account","project_id":"your-project",...}

# Варіант 2: Base64 encoded (якщо JSON занадто великий)
# GOOGLE_CREDS_B64=eyJ0eXBlIjoic2VydmljZV9hY2NvdW50IiwicHJvamVjdF9pZCI6InlvdXItcHJvamVjdCJ9...

# ============================================
# GEMINI AI CONFIGURATION
# ============================================

# Gemini API Key (з Google AI Studio)
GEMINI_API_KEY=AIzaSyC1234567890abcdefghijklmnopqrstuvwxyz
# ============================================
# OPERATOR CONFIGURATION
# ============================================

# Telegram Chat ID оператора (для отримання замовлень)
# Дізнатися свій ID: відправте /start боту @userinfobot
OPERATOR_CHAT_ID=123456789

# ============================================
# REDIS CONFIGURATION (опціонально)
# ============================================

# Redis URL для production (масштабування з workers)
# Якщо не вказано - використовується in-memory storage
# REDIS_URL=redis://localhost:6379/0

# Для Redis з паролем:
# REDIS_URL=redis://:password@localhost:6379/0

# Для Redis Cloud:
# REDIS_URL=redis://default:password@redis-12345.cloud.redislabs.com:12345

# ============================================
# APPLICATION CONFIGURATION
# ============================================

# Environment (development/production)
ENVIRONMENT=development

# Flask Debug Mode (тільки для development!)
FLASK_DEBUG=False

# Logging Level (DEBUG/INFO/WARNING/ERROR)
LOG_LEVEL=INFO

