# ============================================================================
# Ferrik Bot 2.0 — Environment Configuration
# ============================================================================
# Скопіюй цей файл як .env та заповни своїми даними
# ВАЖЛИВО: Не коміть .env у Git!
# ============================================================================

# ============================================================================
# TELEGRAM BOT
# ============================================================================
# Отримай токен у @BotFather
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz

# Webhook URL (для production)
# Формат: https://your-domain.com/webhook
TELEGRAM_WEBHOOK_URL=

# Telegram API base URL (зазвичай не потрібно змінювати)
TELEGRAM_API_URL=https://api.telegram.org

# ============================================================================
# DATABASE
# ============================================================================
# SQLite (локально або development)
DATABASE_PATH=bot.db

# PostgreSQL (production, опціонально)
# DATABASE_URL=postgresql://user:password@localhost:5432/ferrik_bot

# ============================================================================
# GOOGLE SHEETS
# ============================================================================
# Шлях до credentials.json (Service Account Key)
GOOGLE_SHEETS_CREDENTIALS=credentials.json

# ID таблиці Google Sheets
# Візьми з URL: https://docs.google.com/spreadsheets/d/{SPREADSHEET_ID}/edit
GOOGLE_SHEETS_SPREADSHEET_ID=your_spreadsheet_id_here

# Назви листів у таблиці
GOOGLE_SHEETS_MENU_SHEET=Меню
GOOGLE_SHEETS_ORDERS_SHEET=Замовлення
GOOGLE_SHEETS_PROMOS_SHEET=Промокоди
GOOGLE_SHEETS_REVIEWS_SHEET=Відгуки
GOOGLE_SHEETS_PARTNERS_SHEET=Партнери

# ============================================================================
# SERVER
# ============================================================================
# Порт для Flask (Render використовує змінну PORT автоматично)
PORT=5000

# Режим відлагодження (ТІЛЬКИ для development!)
DEBUG=False

# Flask secret key (для сесій)
SECRET_KEY=your-super-secret-key-change-this

# Дозволені хости
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# ============================================================================
# CACHING
# ============================================================================
# Увімкнути кешування
ENABLE_CACHE=True

# Redis URL (якщо використовуєш Redis)
# REDIS_URL=redis://localhost:6379/0

# TTL для кешу меню (секунди)
CACHE_MENU_TTL=300

# TTL для кешу користувача (секунди)
CACHE_USER_TTL=600

# ============================================================================
# RATE LIMITING
# ============================================================================
# Максимум запитів
RATE_LIMIT_REQUESTS=30

# Період (секунди)
RATE_LIMIT_PERIOD=60

# Максимум повідомлень на користувача (антиспам)
USER_MESSAGE_LIMIT=10
USER_MESSAGE_PERIOD=60

# ============================================================================
# FEATURES (Увімкнення/вимкнення фіч)
# ============================================================================
# Онбординг-квест
ENABLE_ONBOARDING_QUEST=True

# AI-рекомендації
ENABLE_AI_RECOMMENDATIONS=True

# Гейміфікація
ENABLE_GAMIFICATION=True

# Реферальна програма
ENABLE_REFERRAL_PROGRAM=True

# Система відгуків
ENABLE_REVIEWS=True

# Пошук по меню
ENABLE_SEARCH=True

# Трекінг замовлень
ENABLE_ORDER_TRACKING=True

# Сповіщення
ENABLE_NOTIFICATIONS=True

# ============================================================================
# BUSINESS LOGIC
# ============================================================================
# Мінімальна сума замовлення (грн)
MIN_ORDER_AMOUNT=50

# Вартість доставки (грн)
DELIVERY_COST=50

# Безкоштовна доставка від (грн)
FREE_DELIVERY_FROM=300

# Години роботи
OPEN_HOUR=8
CLOSE_HOUR=23

# Час приготування за замовчуванням (хвилини)
DEFAULT_COOK_TIME=30

# Час доставки за замовчуванням (хвилини)
DEFAULT_DELIVERY_TIME=30

# ============================================================================
# GAMIFICATION
# ============================================================================
# Бали за 1 грн витрат
POINTS_PER_CURRENCY=0.1

# Вартість 1 балу (грн)
POINT_VALUE=0.1

# XP за замовлення (базовий)
XP_PER_ORDER=10

# XP за 1 грн витрат
XP_PER_CURRENCY=0.5

# ============================================================================
# REFERRAL PROGRAM
# ============================================================================
# Бонус реферера за запрошення (бали)
REFERRER_BONUS=50

# Знижка реферера (%)
REFERRER_DISCOUNT=5

# Бонус реферала при реєстрації (бали)
REFEREE_BONUS=30

# Знижка реферала на перше замовлення (%)
REFEREE_DISCOUNT=10

# Додатковий бонус за першого реферала
FIRST_REFERRAL_BONUS=100

# ============================================================================
# NOTIFICATIONS
# ============================================================================
# Надсилати сповіщення про статус замовлення
NOTIFY_ORDER_STATUS=True

# Надсилати промо-сповіщення
NOTIFY_PROMOTIONS=True

# Надсилати нагадування про кошик
NOTIFY_CART_REMINDER=True

# Затримка нагадування про кошик (хвилини)
CART_REMINDER_DELAY=30

# ============================================================================
# ADMIN
# ============================================================================
# Telegram ID адміністраторів (через кому)
ADMIN_USER_IDS=123456789,987654321

# Telegram ID для сповіщень про помилки
ERROR_NOTIFICATION_USER_ID=123456789

# ============================================================================
# LOGGING
# ============================================================================
# Рівень логування (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Логування в файл
LOG_TO_FILE=True
LOG_FILE_PATH=logs/bot.log

# Максимальний розмір log файлу (MB)
LOG_MAX_SIZE=10

# Кількість backup log файлів
LOG_BACKUP_COUNT=5

# ============================================================================
# MONITORING (Опціонально)
# ============================================================================
# Sentry DSN для моніторингу помилок
# SENTRY_DSN=https://...@sentry.io/...

# Prometheus metrics
# ENABLE_METRICS=True
# METRICS_PORT=9090

# ============================================================================
# SECURITY
# ============================================================================
# JWT Secret (для майбутніх API токенів)
# JWT_SECRET=your-jwt-secret-key

# Encryption key для чутливих даних
# ENCRYPTION_KEY=your-encryption-key

# ============================================================================
# EXTERNAL SERVICES (Майбутнє)
# ============================================================================
# Платіжна система
# STRIPE_API_KEY=sk_test_...
# LIQPAY_PUBLIC_KEY=...
# LIQPAY_PRIVATE_KEY=...

# SMS сервіс
# TWILIO_ACCOUNT_SID=...
# TWILIO_AUTH_TOKEN=...
# TWILIO_PHONE_NUMBER=...

# Email
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=...
# SMTP_PASSWORD=...

# ============================================================================
# DEVELOPMENT
# ============================================================================
# Режим розробки (додаткові логи, hot reload)
DEVELOPMENT_MODE=False

# Пропустити валідацію Webhook SSL (тільки development!)
SKIP_WEBHOOK_SSL_VALIDATION=False

# Тестовий режим (використовує тестові дані)
TEST_MODE=False

# ============================================================================
# NOTES
# ============================================================================
# 1. Змінні з порожніми значеннями — опціональні
# 2. Булеві значення: True/False або 1/0
# 3. Списки через кому без пробілів
# 4. Шляхи відносно кореня проєкту
# 5. ЗАВЖДИ використовуй .env для чутливих даних!
# ============================================================================
