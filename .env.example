# ============================================================================
# FerrikFoot Bot - Environment Variables Example
# Скопіюйте цей файл як .env та заповніть своїми даними
# ============================================================================

# ============================================================================
# TELEGRAM BOT
# ============================================================================
# Отримайте токен від @BotFather в Telegram
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz

# URL вашого додатку на Render (після деплою)
WEBHOOK_URL=https://your-app-name.onrender.com

# ID адміністраторів (через кому) - опціонально
# Щоб дізнатися свій ID, напишіть @userinfobot
ADMIN_IDS=123456789,987654321

# ============================================================================
# GOOGLE GEMINI AI
# ============================================================================
# Отримайте ключ на https://makersuite.google.com/app/apikey
GEMINI_API_KEY=AIzaSyXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# Модель (gemini-1.5-flash рекомендована для швидкості)
GEMINI_MODEL=gemini-1.5-flash

# Температура (0.0-1.0, вища = більш креативно)
GEMINI_TEMPERATURE=0.7

# Максимальна кількість токенів у відповіді
GEMINI_MAX_TOKENS=1000

# ============================================================================
# GOOGLE SHEETS
# ============================================================================
# JSON credentials від Google Service Account
# 1. Створіть проєкт на https://console.cloud.google.com
# 2. Увімкніть Google Sheets API та Google Drive API
# 3. Створіть Service Account та завантажте JSON ключ
# 4. Вставте весь JSON в одну лінію (без переносів)
GOOGLE_SHEETS_CREDENTIALS={"type":"service_account","project_id":"your-project","private_key_id":"xxx","private_key":"-----BEGIN PRIVATE KEY-----\nXXX\n-----END PRIVATE KEY-----\n","client_email":"xxx@xxx.iam.gserviceaccount.com","client_id":"xxx","auth_uri":"https://accounts.google.com/o/oauth2/auth","token_uri":"https://oauth2.googleapis.com/token","auth_provider_x509_cert_url":"https://www.googleapis.com/oauth2/v1/certs","client_x509_cert_url":"xxx"}

# ID вашої Google Sheets таблиці (з URL)
# https://docs.google.com/spreadsheets/d/SPREADSHEET_ID/edit
GOOGLE_SHEETS_ID=1AbCdEfGhIjKlMnOpQrStUvWxYz

# Назви аркушів в таблиці
MENU_SHEET_NAME=Menu
ORDERS_SHEET_NAME=Orders

# ============================================================================
# APP SETTINGS
# ============================================================================
# Режим відлагодження (True/False)
DEBUG=False

# Середовище (development/production)
ENVIRONMENT=production

# Порт (Render встановить автоматично)
PORT=5000

# Рівень логування (DEBUG/INFO/WARNING/ERROR)
LOG_LEVEL=INFO

# ============================================================================
# BUSINESS LOGIC
# ============================================================================
# Мінімальна сума замовлення (грн)
MIN_ORDER_AMOUNT=50.0

# Максимальна кількість товарів в замовленні
MAX_ORDER_ITEMS=50

# Вартість доставки (грн)
DELIVERY_COST=0.0

# ============================================================================
# TIMEOUTS
# ============================================================================
# Таймаут сесії користувача (секунди)
SESSION_TIMEOUT=3600

# Таймаут для AI запитів (секунди)
AI_TIMEOUT=30
